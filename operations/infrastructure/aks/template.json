{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "config": {
            "type": "object",
            "metadata": {
                "description": "Project Configuration"
            }
        }
    },
    "functions": [],
    "variables": {
        "aksClusterName" : "[concat(parameters('config').project,parameters('config').stage,'aks',parameters('config').region,parameters('config').num)]",
        "aksVnetName" : "[concat(parameters('config').project,parameters('config').stage,'vnt',parameters('config').region,parameters('config').num)]",
        "aksSubnetName" : "aks-subnet"
    },
    "resources": [
        {
            "name": "[variables('aksVnetName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-11-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "AKS Virtual Network"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.240.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('aksSubnetName')]",
                        "properties": {
                            "addressPrefix": "10.0.0.0/8"
                        }
                    }
                ]
            }
        },
        {
            "name": "[variables('aksClusterName')]",
            "type": "Microsoft.ContainerService/managedClusters",
            "apiVersion": "2020-06-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks',variables('aksVnetName'))]"
            ],
            "tags": {
                "displayName": "Azure Kubernetes Cluster"
            },
            "properties": {
                "kubernetesVersion": "1.16.13",
                "dnsPrefix": "dnsprefix",
                "agentPoolProfiles": [
                    {
                        "name": "agentpool",
                        "count": 1,
                        "vmSize": "Standard_B2s",
                        "osType": "Linux",
                        "storageProfile": "ManagedDisks",
                        "type": "VirtualMachineScaleSets",
                        "mode": "System"
                    }
                ],
                "linuxProfile": {
                    "adminUsername": "adminUserName",
                    "ssh": {
                        "publicKeys": [
                            {
                                "keyData": "keyData"
                            }
                        ]
                    }
                }
            },
            "identity": {
                "type": "SystemAssigned"
            }
        }
    ],
    "outputs": {
        "controlPlaneFQDN": {
            "type": "string",
            "value": "[reference(concat('Microsoft.ContainerService/managedClusters/', variables('aksClusterName'))).fqdn]"
        }
    }
}